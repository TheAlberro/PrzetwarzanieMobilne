<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/current_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/numans"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/current_month"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/numans"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="7">

        <Button
            android:id="@+id/button10"
            android:layout_width="88dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:fontFamily="@font/numans"
            android:insetLeft="-13dp"
            android:insetRight="-13dp"
            android:text="Mon"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="88dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:fontFamily="@font/numans"
            android:insetLeft="-8dp"
            android:insetRight="-8dp"
            android:text="Tue"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="88dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:fontFamily="@font/numans"
            android:insetLeft="-11dp"
            android:insetRight="-11dp"
            android:text="Wed"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <Button
            android:id="@+id/button7"
            android:layout_width="88dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:fontFamily="@font/numans"
            android:insetLeft="-8dp"
            android:insetRight="-8dp"
            android:text="Thu"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="88dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:fontFamily="@font/numans"
            android:insetLeft="-8dp"
            android:text="Fri"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="88dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:fontFamily="@font/numans"
            android:insetLeft="-8dp"
            android:insetTop="6dp"
            android:insetRight="-8dp"
            android:insetBottom="6dp"
            android:text="Sat"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="86dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif"
            android:insetLeft="-10dp"
            android:insetTop="6dp"
            android:insetRight="-10dp"
            android:insetBottom="6dp"
            android:text="Sun"
            android:textColor="@color/blue_grotto"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/calendar_week_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="7" />

    <LinearLayout
        android:id="@+id/calendar_week_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="7" />

    <LinearLayout
        android:id="@+id/calendar_week_3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="7" />

    <LinearLayout
        android:id="@+id/calendar_week_4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="7" />

    <LinearLayout
        android:id="@+id/calendar_week_5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="7" />

    <LinearLayout
        android:id="@+id/calendar_week_6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="7" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <Button
            android:id="@+id/buttonFriends"
            android:layout_width="300dp"
            android:layout_height="64dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/numans"
            android:onClick="goToFriends"
            android:text="Friends List"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.489"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>